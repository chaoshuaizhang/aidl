<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.shopin.testactivitylaunch.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btn_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnClick"
            android:text="标准模式"
            />

        <Button
            android:id="@+id/btn_standard_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="标准模式+设置FLAG_ACTIVITY_NEW_TASK"
            />

        <Button
            android:id="@+id/btn_standard_affinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="标准模式+设置Affinity"
            />

        <Button
            android:id="@+id/btn_standard_newtask_affinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="标准模式+设置FLAG_ACTIVITY_NEW_TASK+Affinity"
            />

        <Button
            android:id="@+id/btn_application_context_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="使用ApplicationContext上下文启动"
            />

        <Button
            android:id="@+id/btn_singletop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="SingleTop模式"
            />
        <Button
            android:id="@+id/btn_singletask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="SingleTask模式"
            />
        <Button
            android:id="@+id/btn_singleinstance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="btnClick"
            android:text="SingleInstance模式"
            />
    </LinearLayout>
</ScrollView>
